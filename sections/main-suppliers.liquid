{% assign breweries = section.settings.breweries %}

<h1>{{- section.settings.title | escape -}}</h1>

{% paginate breweries by 2 %}
  {% for brewery in breweries %}
    <a href="{{- brewery.url -}}">
      {{ brewery.image.src | image_url: width: 200 | image_tag }}
      {{- brewery.title -}}
    </a>
  {% endfor %}
  {{- paginate | default_pagination -}}
{% endpaginate %}

{% schema %}
{
  "name": "Suppliers",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Suppliers"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "Add a page title."
    },
    {
      "type": "collection_list",
      "id": "breweries",
      "info": "Choose breweries to feature om this page.",
      "label": "Breweries"
    }
  ]
}
{% endschema %}
